<% provide(:colonies_active, 'active') %>

<br>

<h1>Events</h1>

<br>

<table class='table'>
  <thead class='thead-inverse'>
    <tr>
      <th>Cat</th>
      <th>Description</th>
      <th>Date of event</th>
      <th>Solved</th>
      <th>Solution description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.cat.code + " " + event.cat.name %></td>
        <td><%= event.description %></td>
        <td><%= event.date_of_event %></td>
        <td><%= event.solved %></td>
        <td><%= event.solution_description %></td>
        <td><%= link_to 'Show', event, :class => 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_event_path(event), :class => 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

