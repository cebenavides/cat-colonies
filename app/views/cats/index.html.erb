<% provide(:colonies_active, 'active') %>

<br>

<h1>Cats</h1>

<br>

<table class='table'>
  <thead class='thead-inverse'>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Birthday</th>
      <th>Colony</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cats.each do |cat| %>
      <tr>
        <td><%= cat.code %></td>
        <td><%= cat.name %></td>
        <td><%= cat.birthday %></td>
        <td><%= cat.colony_id %></td>
        <td><%# link_to 'Show', cat, :class => 'btn btn-primary' %></td>
        <td><%# link_to 'Edit', edit_cat_path(cat), :class => 'btn btn-warning' %></td>
        <td><%# link_to 'Destroy', cat, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

