<% provide(:colonies_active, 'active') %>

<% if user_signed_in? %>

  <br>
  
  <h1>Colonies</h1>
  
  <br>
  
  <table class="table">
    <thead class="thead-inverse">
      <tr>
        <th>Code</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @colonies.each do |colony| %>
        <tr>
          <td><%= colony.code %></td>
          <td><%= colony.description %></td>
          <td><%= link_to 'Show', colony, :class => 'btn btn-primary' %></td>
          <td><%= link_to 'Edit', edit_colony_path(colony), :class => 'btn btn-warning' %></td>
          <td><%= link_to 'Delete', colony, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <%= link_to 'New colony', new_colony_path, :class => 'btn btn-outline-warning' %>

<% else %>

  <div class="alert alert-warning" role="alert">
    <strong>Sign in to access the administration panel.</strong>
  </div>
  
<% end %>